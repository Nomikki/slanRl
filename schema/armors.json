{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "properties": {
    "$schema": {
      "type": "string"
    }
  },
  "patternProperties": {
    "armors": {
      "$ref": "#/definitions/armors-schema"
    }
  },
  "additionalProperties": false,
  "definitions": {
    "armors-schema": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/armor-schema"
      }
    },
    "armor-schema": {
      "properties": {
        "name": {
          "type": "string"
        },
        "defense": {
          "$ref": "#/definitions/defense-schema"
        }
      },
      "required": ["name", "defense"]
    },
    "defense-schema": {
      "type": "integer",
      "minimum": 1,
      "maximum": 100,
      "description": "Defines the armor capabilities"
    }
  }
}
